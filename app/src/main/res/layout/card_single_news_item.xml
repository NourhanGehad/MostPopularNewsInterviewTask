<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Circular Image of News Item-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/card_news_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        android:layout_marginStart="8dp"
        android:src="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/card_news_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/card_news_item_go_to_details"
        tools:text="Breaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand TrialBreaking With G.O.P., Top Conservative Lawyer Says Trump Can Stand Trial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_news_item_image"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/card_news_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        tools:text="By Carl Zimmer"
        app:layout_constraintTop_toBottomOf="@id/card_news_item_title"
        app:layout_constraintStart_toEndOf="@id/card_news_item_image"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/card_news_item_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        tools:text="2021-02-07"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_calendar"
        app:layout_constraintTop_toBottomOf="@id/card_news_item_author"
        app:layout_constraintEnd_toEndOf="@id/card_news_item_title"
        android:layout_marginStart="8dp" />
    <ImageView
        android:id="@+id/card_news_item_go_to_details"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_next"/>
</androidx.constraintlayout.widget.ConstraintLayout>