<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vvm.destination.NewsDetailsFragment">


    <TextView
        android:id="@+id/f_news_details_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="The Weeknd Emerges From the Shadows at the Super Bowl Halftime Show"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/f_news_details_publish_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Publish date: 2021-02-07"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/f_news_details_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/f_news_details_author_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="By Jon Caramanica"
        app:layout_constraintTop_toBottomOf="@id/f_news_details_publish_date_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/f_news_details_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Description: After more than 15 washes, various treatments and a trip to the emergency room, Tessica Brown’s hair still won’t budge. A TikTok explaining her dilemma has drawn a huge following and advice."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_news_details_author_tv"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/f_news_details_article_link_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Go to article from:https://www.nytimes.com/2021/02/08/style/gorilla-glue-girl-tessica-brown-work.html"
        android:autoLink="web"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/f_news_details_desc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/f_news_details_source_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Source: New York Times"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_news_details_article_link_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>